<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/downloads_item_view_episode_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@id/downloads_item_view_episode_view_play_container"
        android:layout_toStartOf="@id/downloads_item_view_episode_view_play_container"
        android:layout_weight="0.80"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="14sp"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/downloads_item_view_episode_view_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/downloads_item_view_episode_view_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/downloads_item_view_episode_view_name"
        android:layout_below="@id/downloads_item_view_episode_view_name"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="10sp"
        app:fontFamily="serif" />

    <ViewSwitcher
        android:id="@+id/downloads_item_view_episode_view_play_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/downloads_item_view_episode_view_length"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/downloads_item_view_episode_view_name"
        android:layout_centerInParent="true"
        android:layout_margin="8dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/downloads_item_view_episode_view_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/downloads_item_view_episode_view_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_error_black_24dp" />

    </ViewSwitcher>

</RelativeLayout>